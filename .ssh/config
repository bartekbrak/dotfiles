# man ssh:
#    For each parameter, the first obtained value will be used.
# IdentityFile:
# - full path to the private key file
# - using ~ is fine
#
# Host matches whatever is used in the commenadline
# HostName is the actual target

Include config.d/*.conf
IdentitiesOnly yes
PreferredAuthentications publickey
ServerAliveInterval 5

Host bitbucket.org
    HostName bitbucket.org
    IdentityFile ~/.ssh/bartek@brak.dev

Host github.com
    HostName github.com
    IdentityFile ~/.ssh/bartek@brak.dev

Host mints
    HostName 185.180.206.68
    User root
    IdentityFile ~/.ssh/bartek@brak.dev

Host kinro
    HostName 185.180.206.68
    User kinro
    IdentityFile ~/.ssh/bartek@brak.dev

Host kiu_server
    HostName 185.180.206.68
    User kiu_server
    IdentityFile ~/.ssh/bartek@brak.dev

Host yong
    HostName 185.180.206.68
    User yong
    IdentityFile ~/.ssh/bartek@brak.dev

Host brak.dev
    HostName 5.189.150.20
    User root
    IdentityFile ~/.ssh/bartek@brak.dev
# I will name all services that have my key so that I remember
#
Host github.com
    HostName github.com
    IdentityFile ~/.ssh/bartek@brak.dev
